
<form method="POST" action="/me/update/avatar/edit" enctype="multipart/form-data">
<div class="layout_wrap">
    <div class="avatar_inner">
            <div class="avatar_wrap">
                <div class="avatarr" id="avatarr" style="background-image: url('{{data.avatar}}');"></div>
                <input type="file" name="image" accept="image/*" id="avt_input" class="file_input">
                <div>
                    <button class="avatar_btn hover_btn_avt" id="select_img">Chọn ảnh</button>
                </div>
            </div>
            <div class="only_btn">
                <button type="submit" class="avatar_btn classrac" id="submit_avt_btn">Lưu</button>   
            </div>
        </div>
    </div>
</div>
</form>